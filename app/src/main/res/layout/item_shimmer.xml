<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hook"
            type="com.hanto.hook.model.Hook" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/shimmer1"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ffaaaaaa"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/shimmer2"
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ffaaaaaa"
                app:layout_constraintTop_toBottomOf="@+id/shimmer1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/shimmer3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ffaaaaaa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer2" />

            <TextView
                android:id="@+id/shimmer4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ffaaaaaa"
                app:layout_constraintLeft_toRightOf="@+id/shimmer3"
                app:layout_constraintTop_toBottomOf="@+id/shimmer2" />

            <TextView
                android:id="@+id/shimmer5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ffaaaaaa"
                app:layout_constraintLeft_toRightOf="@+id/shimmer4"
                app:layout_constraintTop_toBottomOf="@+id/shimmer2" />

            <TextView
                android:id="@+id/shimmer6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ffaaaaaa"
                app:layout_constraintLeft_toRightOf="@+id/shimmer5"
                app:layout_constraintTop_toBottomOf="@+id/shimmer2" />


            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/gridview_HookTag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:textSize="12dp"
                app:flexWrap="wrap"
                app:layout_constraintTop_toBottomOf="@+id/shimmer3"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Divider View -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCCCCC" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
