<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingEnd="4dp"
    android:layout_height="wrap_content">




    <TextView
        android:id="@+id/tv_grid_folder"
        style="@style/FolderTitle"
        android:paddingEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:background="@color/green"
        android:text="종합설계 프로젝트"
        android:paddingTop="1dp"
        app:layout_constraintStart_toEndOf="@id/iv_grid_folder"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_grid_folder"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:paddingTop="3.5dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="3.5dp"
        android:contentDescription="@string/label_folder"
        android:background="@color/green"
        android:src="@drawable/ic_folder_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>