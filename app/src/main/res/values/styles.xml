<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosan_r</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:fontFamily">@font/notosan_r</item>
    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/AppTexTitle.S16</item>
    </style>

    <style name="AppRoundedImg">
        <item name="cornerSize">50dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="font">@font/notosan_r</item>
    </style>

    <style name="AppTexTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="fontFamily">@font/notosan_r</item>

    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple</item>
        <item name="buttonTint">@color/purple</item>
    </style>


    <style name="FolderTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/notosan_r</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTexTitle.S16">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTexTitle.S16.Bold">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTexTitle.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextCaption">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="AppTextCaption.S12">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTextPrimary">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosan_r</item>
    </style>

    <style name="AppTextPrimary.S16">
        <item name="fontFamily">@font/notosan_r</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--button-->
    <style name="AppTextPrimary.S14.bold">
        <item name="fontFamily">@font/notosan_r</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextPrimary.S14">
        <item name="fontFamily">@font/notosan_r</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyCheckBox" parent="Theme.Material3.Light">
        <item name="colorControlActivated">@color/purple</item>
        <item name="colorPrimary">@color/purple</item>
    </style>

<!--    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">-->
